@model PontoID.Web.Models.EscolaViewModel

@{
    ViewData["Title"] = "Nova Escola";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content">
    <div class="row content-header">
        <div class="col-md-10">
            <h3>Adicionar Escola</h3>
        </div>
        <div class="col-md-2 float-right">
            <a class="btn" asp-action="Index"> <i class="fas fa-arrow-left"></i> Retornar</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body card-content">
                    <div class="row">
                        <div class="col-md-12">
                            <form asp-action="Create">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="Nome" class="control-label"></label>
                                    <input asp-for="Nome" class="form-control" />
                                    <span asp-validation-for="Nome" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="codigoINEP" class="control-label"></label>
                                    <input asp-for="codigoINEP" class="form-control" />
                                    <span asp-validation-for="codigoINEP" class="text-danger"></span>
                                </div>
                                <div class="form-group float-right">
                                    <input type="submit" value="Salvar" class="btn btn-primary" />
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
