@model PontoID.Web.Models.TurmaViewModel

@{
    ViewData["Title"] = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<section class="content">
    <div class="row content-header">
        <div class="col-md-10">
            <h3>Editar Turma</h3>
        </div>
        <div class="col-md-2 float-right">
            <a class="btn" asp-action="Index"> <i class="fas fa-arrow-left"></i> Retornar</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body card-content">
                    <div class="row">
                        <div class="col-md-12">
                            <form asp-action="Edit">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="Nome" class="control-label"></label>
                                    <input asp-for="Nome" class="form-control" />
                                    <span asp-validation-for="Nome" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Descricao" class="control-label"></label>
                                    <textarea asp-for="Descricao" class="form-control"></textarea>
                                    <span asp-validation-for="Descricao" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Turno" class="control-label"></label>
                                    <select asp-for="Turno" class="form-control" asp-items="ViewBag.Turno"></select>
                                    <span asp-validation-for="Turno" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="EscolaId" class="control-label"></label>
                                    <select asp-for="EscolaId" class="form-control" asp-items="ViewBag.EscolaId"></select>
                                    <span asp-validation-for="EscolaId" class="text-danger"></span>
                                </div>
                                <input type="hidden" asp-for="Id" />
                                <div class="form-group float-right">
                                    <input type="submit" value="Salvar" class="btn btn-primary" />
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
